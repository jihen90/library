<p id="notice"><%= notice %></p>

<h1>Reservados</h1>

<table class="table table-striped table-">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Status</th>
      <th>Isbn</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr id="book-<%=book.id%>">
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.isbn %></td>
        <td><%= link_to 'Cancelar reserva', anti_reserve_path(book.id), method: :patch, remote: true, class:'btn btn-warning' %></td>
        <td><%= link_to 'Comprar', buy_path(book.id), method: :patch, remote: true, class:'btn btn-success' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Comprados</h1>

<table class="table table-striped table-">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Status</th>
      <th>Isbn</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="purchased">
    <% @purchased.each do |book| %>
      <tr id="book-<%=book.id%>">
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.isbn %></td>
        <td><%= link_to 'Borrar', anti_buy_path(book.id), method: :patch, remote: true, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



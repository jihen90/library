<p id="notice"><%= notice %></p>

<h1>Bookstore</h1>

<div class='py-4' >
<%= link_to 'Perfil', users_show_path  %> | <%= link_to 'Solicitar libro', books_request_book_path %>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Status</th>
      <th>Isbn</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr id="book-<%=book.id%>">
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.isbn %></td>
        <td><%= link_to 'Reserve', reserve_path(book.id), method: :patch, remote: true, class:'btn btn-outline-primary' %></td>
        <td><%= link_to 'Ver', book, class:'btn btn-outline-success' %></td>
        <td><%= link_to 'Editar', edit_book_path(book), class: 'btn btn-outline-secondary' %></td>
        <td><%= link_to 'Borrar', book, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>




<h1 class='text-center py-4'>Solicitud de libros</h1>
<form class='pb-5'>
    <h4 class='py-2'>Información de contacto:</h4>
    <div class="form-group w-50">
        <label>Nombre:</label>
        <input class="form-control">
    </div>
    <div class="form-group w-50">
        <label>Email:</label>
        <input class="form-control">
    </div>
    <h4 class='py-2'>Libro a solicitar:</h4>
    <div class="form-group w-50">
        <label>Título:</label>
        <input class="form-control">
    </div>
    <div class="form-group w-50">
        <label>Año:</label>
        <input class="form-control">
    </div>
    <div class="form-group w-50">
        <label>Autor:</label>
        <input class="form-control">
    </div>
<%= submit_tag "Enviar", data: { disable_with: "Procesando solicitud..." }, class:'btn btn-primary', remote:true %>
</form>

<%= link_to 'Volver', root_path %>